<%= render 'partial/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">

    <h2>会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'partial/deviseErrorMsg'%>

        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>)文字以上</em>
          <% end %><br />
          <%= f.password_field :password, class: 'form-control', placeholder: "パスワードの確認", autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "確認用パスワード", autocomplete: "off" %>
        </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success btn-lg" %>
      </div>

      <% end %>

      <%= render "devise/shared/links" %>

      <%= link_to "facebookアカウントでログイン", user_facebook_omniauth_authorize_path, class:"btn btn-facebook btn-lg" %>
      <!-- user_facebook_omniauth_authorize_path(:facebook)←仕様変更 -->

    </div>
  </div>
</div>
