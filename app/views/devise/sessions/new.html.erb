<%= render 'partial/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, class: 'form-control', placeholder:'パスワード', autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を記憶する %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>


      <%= link_to "facebookアカウントでログイン", user_facebook_omniauth_authorize_path, class:"btn btn-facebook btn-lg" %>
      <!-- user_facebook_omniauth_authorize_path(:facebook)←できない。仕様変更-->


    </div>
  </div>
</div>
