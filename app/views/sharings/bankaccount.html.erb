<%= render 'partial/navbar' %>

<div class="main">
<div class="container">
  <div class="col-md-3">
    <!-- vertical-navbar -->
    <%= render 'partial/verticalnavbar'%>
  </div>

  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="text-center">
          <span style="font-size:24px;">受取口座情報の編集</span>
        </div>
      </div>

      <div class="panel-body">
        <% if @user.connected? %>
        <!-- userがconnectedされているならばsettingを返す -->
          <%= render 'stripe/setting' %>
        <% else %>
        <!-- そうでないならばconnectedする -->
          <%= render 'stripe/connected' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
