<!-- patial just render single message -->
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-2 text-center row-space-1">
        <%# if message.user.image.present? %>
        <%#= image_tag message.user.image, class: "img-circle profile-1" %>
        <%# end %>
        <br>

        <strong><%= message.user.name %></strong>
      </div>

      <div class="col-md-8">
        <%= message.body %>
      </div>

      <div class="col-md-2">
        <a class="pull-right"><%= message.message_time_day %></a><br>
        <a class="pull-right"><%= message.message_time %></a>
      </div>
    </div>
  </div>
</div>
